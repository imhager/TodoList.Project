@model TodoList.Entity.TodoUser
@{
    ViewData["Title"] = "User Edit";
}
<div class="panel panel-default" style="padding:8px">
    <form class="form-horizontal" asp-controller="User" asp-action="Edit" method="post">
        <div class="row">
            <input type="hidden" asp-for="Id" value="@(Model.Id)" />
            <div class="form-group">
                <label for="inputUserName" class="col-sm-2 control-label">姓名</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputUserName" placeholder="填写姓名" required asp-for="UserName" />
                </div>
            </div>
            <div class="form-group">
                <label for="inputNickName" class="col-sm-2 control-label">昵称</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputNickName" placeholder="填写昵称" required asp-for="NickName" />
                </div>
            </div>
            <div class="form-group">
                <label for="inputBrithday" class="col-sm-2 control-label">Brithday</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputBrithday" placeholder="填写Brithday" required asp-for="Brithday" />
                </div>
            </div>
            <div class="form-group">
                <label for="inputSex" class="col-sm-2 control-label">Sex</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputSex" placeholder="填写性别" required asp-for="Sex" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">发布</button>
                </div>
            </div>
        </div>
    </form>
</div>